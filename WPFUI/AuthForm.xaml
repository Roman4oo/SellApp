<Window x:Class="WPFUI.AuthForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFUI"
        mc:Ignorable="d"
        Title="AuthForm" Height="450" Width="800">
    <Grid>
        <Button x:Name="log_in_btn" Content="Sign In" HorizontalAlignment="Left" Margin="249,256,0,0" VerticalAlignment="Top" Width="75" Click="log_in_btn_Click" />
        <Label Content="Passwod" HorizontalAlignment="Left" Margin="249,168,0,0" VerticalAlignment="Top"/>
        <Label Content="Login" HorizontalAlignment="Left" Margin="249,94,0,0" VerticalAlignment="Top"/>
        <Button x:Name="sign_up_btn" Content="Sign Up" HorizontalAlignment="Left" Margin="398,256,0,0" VerticalAlignment="Top" Width="75" Click="sign_up_btn_Click"/>
        <TextBox x:Name="login_box" HorizontalAlignment="Left" Height="23" Margin="249,125,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="224"/>
        <TextBox x:Name="pas_box" HorizontalAlignment="Left" Height="23" Margin="249,199,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="224"/>
    </Grid>
</Window>
